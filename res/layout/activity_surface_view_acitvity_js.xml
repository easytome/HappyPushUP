<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/activity_bg"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SurfaceViewAcitvityJs">



    <LinearLayout
        android:background="@drawable/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <Chronometer android:id="@+id/myChronometer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:textColor="#ff0000"/>
	 
    <TextView android:id = "@+id/textViewGs"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="150dp" 
        android:textColor="#ff0000"/>

    <TextView android:id = "@+id/textViewSj"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="150dp" 
        android:textColor="#ff0000"/>

 	

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >




        <Button
            android:id="@+id/butStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150.0dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF0000"
            android:background="#C0C0C0"
            />

        <Button
            android:id="@+id/butStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150.0dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="停止"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF0000"
            android:background="#C0C0C0"
            />





        </LinearLayout>






    </LinearLayout>



</RelativeLayout>
